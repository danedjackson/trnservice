@model trnservice.Models.TrnSearchRequestViewModel

@{
    ViewData["Title"] = "TRN Validation Service";
}

<h5 class="card-title fw-semibold mb-4">Individual TRN Validation Form</h5>
<form asp-action="Index">
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" type="text" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MiddleName" class="form-label">Middle Name</label>
        <input asp-for="MiddleName" type="text" class="form-control" aria-describedby="middleNameHelp">
        <div id="middleNameHelp" class="form-text">Miiddle name is optional</div>
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" type="text" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Gender" class="form-label">Gender</label>
        <select asp-for="Gender" name="Gender" class="form-select">
            <option value="" selected disabled hidden>Select an option</option>
            <option value="F">Female</option>
            <option value="M">Male</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
        <input asp-for="DateOfBirth" class="form-control" type="date">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Trn" class="form-label">Tax Registration Number (TRN)</label>
        <input asp-for="Trn" type="text" class="form-control">
        <span asp-validation-for="Trn" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<script src="~/libs/jquery/dist/jquery.min.js"></script>
<script src="~/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/sidebarmenu.js"></script>
<script src="~/js/app.min.js"></script>
<script src="~/libs/simplebar/dist/simplebar.js"></script>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}