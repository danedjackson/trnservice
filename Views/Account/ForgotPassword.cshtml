@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "./_AccountLayout";
}

<h3>Forgot Password</h3>
<form asp-action="ForgotPassword" asp-controller="Account" method="post">
    <div class="mb-3 form-group">
        <label asp-for="UserName" class="form-label">Username</label>
        <div id="usernameHelp" class="form-text">Enter username</div>
        <input asp-for="UserName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary w-100 fs-4 mb-4 rounded-2">Submit Request</button>
    <button class="btn btn-secondary w-100 fs-4 mb-4 rounded-2" asp-action="Index" asp-controller="Home">Go back</button>
</form>
@if (Model != null)
{
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="mb-3">
            <div class="alert alert-success" role="alert">@Model.Message</div>
        </div>
    }
}