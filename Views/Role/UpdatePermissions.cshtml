@using trnservice.Areas.Identity.Data

@model trnservice.Models.Roles.RolePermissionDetails
@{
    ViewData["Title"] = "UPDATE ROLE PERMISSIONS";
}

<h5 class="card-title fw-semibold mb-4">Update Role Permissions</h5>
<div class="card">
    <div class="card-body">

        <form method="post">
            <input type="hidden" name="roleName" value="@Model.Role.Name" />
            <input type="hidden" name="roleId" value="@Model.Role.Id" />

            <h2>Add To @Model.Role.Name</h2>
            <table class="table table-bordered table-sm">
                @if (Model.UnassignedPermissions.Count() == 0)
                {
                    <tr><td colspan="2">All Permissions Assigned</td></tr>
                }
                else
                {
                    @foreach (ApplicationPermission permission in Model.UnassignedPermissions)
                    {
                        <tr>
                            <td>@permission.Name</td>
                            <td>
                                <input type="checkbox" name="PermissionIdsToAdd" value="@permission.Id">
                            </td>
                        </tr>
                    }
                }
            </table>

            <h2>Remove From @Model.Role.Name</h2>
            <table class="table table-bordered table-sm">
                @if (Model.AssignedPermissions.Count() == 0)
                {
                    <tr><td colspan="2">No Users Are Members</td></tr>
                }
                else
                {
                    @foreach (ApplicationPermission permission in Model.AssignedPermissions)
                    {
                        <tr>
                            <td>@permission.Name</td>
                            <td>
                                <input type="checkbox" name="PermissionIdsToDelete" value="@permission.Id">
                            </td>
                        </tr>
                    }
                }
            </table>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>