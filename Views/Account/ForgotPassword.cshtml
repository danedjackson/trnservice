@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TRN Validation Service</title>
    <link rel="shortcut icon" type="image/png" href="/images/logos/favicon.png" />
    <link rel="stylesheet" href="/css/styles.min.css" />
</head>
<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <h3>Forgot Password</h3>
                                <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                                    <div class="mb-3 form-group">
                                        <label asp-for="UserName" class="form-label">Username</label>
                                        <div id="usernameHelp" class="form-text">Enter username</div>
                                        <input asp-for="UserName" class="form-control" />
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 fs-4 mb-4 rounded-2">Submit Request</button>
                                    <button class="btn btn-secondary w-100 fs-4 mb-4 rounded-2" asp-action="Index" asp-controller="Home">Go back</button>
                                </form>
                                @if (Model != null)
                                {
                                    @if (!string.IsNullOrEmpty(Model.Message))
                                    {
                                        <div class="mb-3">
                                            <div class="alert alert-success" role="alert">@Model.Message</div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>