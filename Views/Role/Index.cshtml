@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<h5 class="card-title fw-semibold mb-4">Manage Roles</h5>
<div class="card">
    <div class="card-body">
        <h1>All Roles</h1>

        <table class="table table-sm table-bordered table-bordered">
            <tr><th>ID</th><th>Name</th><th>Actions</th></tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a>
                        <a class="btn btn-sm btn-danger" onclick="confirmDelete('@role.Id')">Delete</a>
                    </td>
                </tr>
            }
        </table>
        <a asp-action="Create" class="btn btn-secondary">Create a Role</a>
    </div>
</div>

<script src="~/libs/jquery/dist/jquery.min.js"></script>
<script src="~/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/sidebarmenu.js"></script>
<script src="~/js/app.min.js"></script>
<script src="~/libs/simplebar/dist/simplebar.js"></script>

<script>
    function confirmDelete(roleId) {
        if (confirm('Are you sure you want to delete this role?')) {
            // User clicked OK, proceed with the form submission
            var form = document.createElement('form');
            form.method = 'post';
            form.action = '@Url.Action("Delete")';
            form.innerHTML = '<input type="hidden" name="id" value="' + roleId + '" />';
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>