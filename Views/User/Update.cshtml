@using trnservice.Areas.Identity.Data
@model ApplicationUser

@{
    ViewData["Title"] = "CREATE USER";
}
<h5 class="card-title fw-semibold mb-4">Edit User</h5>

<div class="col-md-4">
    <form asp-action="Update" method="post">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="@Model.UserName">Username</label>
            <input asp-for="@Model.UserName" class="form-control" disabled />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div><div class="form-group mb-3">
            <label asp-for="@Model.Email">Email Address</label>
            <input asp-for="@Model.Email" class="form-control" type="email" disabled />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" class="form-control" type="password" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div class="row">
        </div>
        <div>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>

        <a asp-action="Index" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-primary">Update</button>
        @if (!Model.IsActive)
        {
            <a asp-controller="User" asp-action="Reactivate" asp-route-id="@Model.Id" class="btn btn-success">Reactivate</a>
        }
    </form>
</div>
<script src="~/libs/jquery/dist/jquery.min.js"></script>
<script src="~/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/sidebarmenu.js"></script>
<script src="~/js/app.min.js"></script>
<script src="~/libs/simplebar/dist/simplebar.js"></script>
