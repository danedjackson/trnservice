@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<h5 class="card-title fw-semibold mb-4">Manage Roles</h5>
<div class="card">
    <div class="card-body">
        <h1>All Roles</h1>

        <table class="table table-sm table-bordered table-bordered">
            <tr><th>ID</th><th>Name</th><th>Update</th><th>Delete</th></tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        <a asp-action="Create" class="btn btn-secondary">Create a Role</a>
    </div>
</div>
                        