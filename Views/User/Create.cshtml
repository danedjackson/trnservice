@model UserRegisterViewModel

@{
    ViewData["Title"] = "CREATE USER";
}
<h5 class="card-title fw-semibold mb-4">Create a User</h5>
<form asp-action="Create" method="post">
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="form-label"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-group">
                <label asp-for="@Model.LastName" class="form-label"></label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Email" class="form-label"></label>
        <input asp-for="@Model.Email" class="form-control" type="email" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.UserName" class="form-label"></label>
        <div id="usernameHelp" class="form-text">Username format: Firstname.LastnameMiddleinitial<br />Example: dane.jacksond</div>
        <input asp-for="@Model.UserName" class="form-control" />
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>

    @if (Model != null)
    {
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="mb-3">
                <div class="alert alert-success" role="alert">@Model.Message</div>
            </div>
        }
    }

    <div class="col-md-4" style="margin-top:25px;">
        <a asp-action="Index" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>
<script src="~/libs/jquery/dist/jquery.min.js"></script>
<script src="~/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/sidebarmenu.js"></script>
<script src="~/js/app.min.js"></script>
<script src="~/libs/simplebar/dist/simplebar.js"></script>