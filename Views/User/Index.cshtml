@using trnservice.Areas.Identity.Data
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "USERS";
}

<h5 class="card-title fw-semibold mb-4">Manage Users</h5>
<div class="card">
    <div class="card-body">
        <h1>All Users</h1>

        <table class="table table-sm table-bordered table-bordered">
            <tr><th>ID</th><th>First Name</th><th>Last Name</th><th>Email</th><th>Update</th><th>Delete</th></tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Update</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        <a asp-action="Create" class="btn btn-secondary">Create a User</a>
    </div>
</div>

<script src="~/libs/jquery/dist/jquery.min.js"></script>
<script src="~/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/sidebarmenu.js"></script>
<script src="~/js/app.min.js"></script>
<script src="~/libs/simplebar/dist/simplebar.js"></script>